{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@corneflex/compose-ui": ["./packages/compose-ui/src"],
      "@corneflex/compose-core": ["./packages/compose-core/src"]
    }
  },
  "exclude": ["node_modules"]
}
